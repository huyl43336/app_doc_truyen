<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundlogin"

    tools:context=".ManDangNhap">

    <ImageButton
        android:id="@+id/imgBtnPower"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:background="#55FFFFFF"
        android:scaleType="fitCenter"
      android:src="@drawable/btnoff"
        android:layout_gravity="end"
        android:onClick="showExitDialog"

        android:contentDescription="Enter How Much Cookies You Want"
        ></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:text="Đăng Nhập"
        android:textColor="#2196F3"
        android:textSize="50sp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/taikhoan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:drawableRight="@drawable/ic_taikhoan"
        android:hint="Tài Khoản"
        android:minHeight="48dp"
        android:textColor="#040404"
        android:textColorHint="#2196F3"></EditText>

    <EditText
        android:id="@+id/matkhau"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/baseline_lock_24"
        android:hint="Mật Khẩu"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#040404"
        android:textColorHint="#2196F3"></EditText>
    <TextView
        android:id="@+id/tv_doimk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:text="Đổi mật khẩu?"
        android:textColor="#2196F3"
        android:textAlignment="center"
        android:textSize="18sp" />
    <Button
        android:id="@+id/dangnhap"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Đăng Nhập"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>
    <Button
        android:id="@+id/dangky"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Đăng Ký"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>
</LinearLayout>